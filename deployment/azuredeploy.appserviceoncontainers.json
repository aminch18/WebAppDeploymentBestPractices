{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "alwaysOn": {
            "type": "bool",
            "defaultValue": true
        },
        "appServiceSku": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "appServiceSkuCode": {
            "type": "string",
            "defaultValue": "S1"
        },
        "acrUsername": {
            "type": "string",
            "defaultValue": ""
        },
        "acrPassword": {
            "type": "string",
            "defaultValue": ""
        },
        "acrLogin": {
            "type": "string",
            "defaultValue": ""
        },
        "webAppName": {
          "type": "string",
          "defaultValue": "[concat('demowebapponcontainers-', uniqueString(resourceGroup().id))]",
          "minLength": 2
        },
        "image": {
          "type": "string",
          "defaultValue": "demoapp"
        },
        "TAG": {
          "type": "string"
        }
      },
    "variables": {
        "hostingPlanName": "[concat('sp-', parameters('webAppName'))]"
    },
    "resources": [
        {
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "kind": "app,linux,container",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[variables('hostingPlanName')]",
              "siteConfig": {
                //"linuxFxVersion": "[concat('DOCKER|', parameters('acrLogin'),'/', parameters('image'), ':', parameters('TAG'))]",
                "alwaysOn": "[parameters('alwaysOn')]",
                "appSettings": [
                  {
                    "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                    "value": "false"
                  },
                  {
                    "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                    "value": "[parameters('acrUsername')]"
                  },
                  {
                    "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                    "value": "[parameters('acrPassword')]"
                  },
                  {
                    "name": "DOCKER_REGISTRY_SERVER_URL",
                    "value": "[concat('https://',parameters('acrUsername'),'.azurecr.io')]"
                  }
                ]
              },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "clientAffinityEnabled": false
            }
        },
        {
            "apiVersion": "2020-06-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "linux",
            "sku": {
                "Tier": "[parameters('appServiceSku')]",
                "Name": "[parameters('appServiceSkuCode')]"
            },
            "properties": {
                "reserved": true
            }
        }
    ]
}