{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "alwaysOn": {
            "type": "bool",
            "defaultValue": true
        },
        "appServiceSku": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "appServiceSkuCode": {
            "type": "string",
            "defaultValue": "S1"
        },
        "acrName": {
            "type": "string",
            "defaultValue": ""
        },
        "webAppName": {
            "type": "string",
            "defaultValue": "[concat('demowebapponcontainers-', uniqueString(resourceGroup().id))]",
            "minLength": 2
        },
        "image": {
            "type": "string"
        },
        "TAG": {
            "type": "string"
        }
    },
    "variables": {
        "hostingPlanName": "[concat('sp-', parameters('webAppName'))]",
        "acrPullRole": "7f951dda-4ed3-4680-a7ca-43fe172d538d"
    },
    "resources": [
        {
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "kind": "app,linux,container",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "siteConfig": {
                    "linuxFxVersion": "[concat('DOCKER|', 'https://',parameters('acrName'),'.azurecr.io/', parameters('image'), ':', parameters('TAG'))]",
                    "alwaysOn": "[parameters('alwaysOn')]",
                    "appSettings": [
                        {
                            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                            "value": "false"
                        },
                        {
                            "name": "DOCKER_REGISTRY_SERVER_URL",
                            "value": "[concat('https://',parameters('acrName'),'.azurecr.io')]"
                        }
                    ]
                },
                "acrUseManagedIdentityCreds": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "clientAffinityEnabled": false
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "apiVersion": "2020-06-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "linux",
            "sku": {
                "Tier": "[parameters('appServiceSku')]",
                "Name": "[parameters('appServiceSkuCode')]"
            },
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[guid(resourceGroup().id)]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', variables('acrPullRole'))]",
                "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('webAppName')), '2016-08-01', 'Full').identity.principalId]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ]
        }
    ]
}