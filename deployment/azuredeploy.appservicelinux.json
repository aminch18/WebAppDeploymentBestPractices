{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "apponlinux"
    },
    "servicePlanName": {
      "type": "string",
      "defaultValue": "plan"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sku": {
      "type": "string",
      "defaultValue": "S1"
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "DOTNETCORE|5.0"
    },
    "alwaysOn": {
      "type": "bool",
      "defaultValue": true
    },
    "httpsOnly": {
      "type": "bool",
      "defaultValue": true
    },
    "clientAffinityEnabled": {
      "type": "bool",
      "defaultValue": false
    },
    "http20Enabled": {
      "type": "bool",
      "defaultValue": true
    },
    "healthCheckPath": {
      "type": "string",
      "defaultValue": "/api/health"
    },
    "dnsPrefix": {
      "type": "string",
      "defaultValue": "pc"
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev"
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('dnsPrefix'), '-', parameters('environment'), '-', parameters('servicePlanName'))]",
    "webAppName": "[concat(parameters('dnsPrefix'), '-', parameters('environment'), '-', parameters('webAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-02-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ],
      "properties": {
        "clientAffinityEnabled": "[parameters('clientAffinityEnabled')]",
        "httpsOnly": "[parameters('httpsOnly')]",
        "healthCheckPath": "[parameters('healthCheckPath')]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "alwaysOn": "[parameters('alwaysOn')]",
          "http20Enabled": "[parameters('http20Enabled')]",
          "appSettings": [
            {
              "name": "WEBSITE_LOCAL_CACHE_OPTION",
              "value": "Always"
            },
            {
              "name": "WEBSITE_LOCAL_CACHE_SIZEINMB",
              "value": "1000"
            }
          ]
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('webAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "WEBSITE_LOCAL_CACHE_OPTION", "WEBSITE_LOCAL_CACHE_SIZEINMB" ]
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2018-11-01",
      "name": "[concat(variables('webAppName'), '/slot')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "enabled": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {},
        "clientAffinityEnabled": false,
        "httpsOnly": true,
        "alwaysOn": true,
        "http20Enabled": true
      }
    }
  ]
}
